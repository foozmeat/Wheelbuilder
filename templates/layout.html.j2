<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Wheelbuilder</title>

    <link rel=stylesheet type=text/css href="{{ url_for('static', filename='style.css') }}">
    <meta property="og:type" content="website"/>
